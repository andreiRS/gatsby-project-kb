{
  "compilerOptions": {
    "target": "es2017",
    "outDir": "lib",
    "rootDir": "src",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "inlineSourceMap": false,
    "lib": ["es5", "dom"],
    "types": ["jest", "node"],
    "typeRoots": ["node_modules/@types"],
    "jsx": "react",
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**"],
  "compileOnSave": false
}
